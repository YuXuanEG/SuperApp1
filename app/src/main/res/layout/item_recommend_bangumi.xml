<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:text="我是标题"
            android:id="@+id/item_recommend_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--GridLayout 可以设置列数，直接在里边添加控件-->
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/item_recommend_card_view_0"
            style="@style/Recommend_item_Card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/item_recommend_body_icon_0"
                    style="@style/Recommend_Item_Body_Icon"
                    android:src="@mipmap/ic_launcher"
                    />
                <TextView
                    android:id="@+id/item_recommend_body_title_0"
                    android:text="标题"
                    style="@style/Recommend_Item_Body_Title"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_recommend_count_0"
                        android:text="10万"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_recommend_danmaku_0"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/item_recommend_card_view_1"
            style="@style/Recommend_item_Card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/item_recommend_body_icon_1"
                    android:src="@mipmap/ic_launcher"
                    style="@style/Recommend_Item_Body_Icon"/>

                <TextView
                    android:id="@+id/item_recommend_body_title_1"
                    android:text="标题"
                    style="@style/Recommend_Item_Body_Title"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_recommend_count_1"
                        android:text="10万"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_recommend_danmaku_1"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/item_recommend_card_view_2"
            style="@style/Recommend_item_Card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/item_recommend_body_icon_2"
                    android:src="@mipmap/ic_launcher"
                    style="@style/Recommend_Item_Body_Icon"
                    />
                <TextView
                    android:id="@+id/item_recommend_body_title_2"
                    android:text="标题"
                    style="@style/Recommend_Item_Body_Title"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_recommend_count_2"
                        android:text="10万"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_recommend_danmaku_2"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/item_recommend_card_view_3"
            style="@style/Recommend_item_Card"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/item_recommend_body_icon_3"
                    android:src="@mipmap/ic_launcher"
                    style="@style/Recommend_Item_Body_Icon"
                    />
                <TextView
                    android:id="@+id/item_recommend_body_title_3"
                    android:text="标题"
                    style="@style/Recommend_Item_Body_Title"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_recommend_count_3"
                        android:text="10万"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/item_recommend_danmaku_3"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/item_recommend_change"
        android:layout_gravity="center_horizontal"
        android:text="换一波推荐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>